#page
	position relative
	z-index: 1
	background-color white

.header-gradient
	position: absolute
	top: 0
	bottom: 0
	left: 0
	right: 0
	z-index: 0
	height: 100vh
	width: 100vw
	max-height: inherit
	min-height: inherit
	linearGradient stop
		transition: all 0.1s cubic-bezier(.1, .82, .165, 1)
	rect
		transition: all 0.8s cubic-bezier(.1, .82, .165, 1)

.theme-clear 
	.default-bg
		opacity: 0
	.blog-bg
		opacity: 1
	#header-svg-bg
		// bottom: auto
		animation: 0.6s rollUp cubic-bezier(.19, 1, .22, 1) 0.1s forwards
	.svg-shape
		opacity: 0 !important
		transition: 0.2s ease 0.2s

.svg-shape
	opacity: 0
	overflow: visible
	z-index: 0
	transition: all 0.7s cubic-bezier(.1, .82, .165, 1) 0s
	pointer-events none
	position absolute
	*
		overflow: visible
	circle
		width: 100%

.header
	padding: 0 !important
	overflow: hidden
	// background-color: none !important
	// background: none !important
	.svg-shape
		position: absolute
		z-index: 2
		#triangle-1, #circle-1, #line-1
			position: relative  

#triangle-1, #circle-1, #line-1,
#triangle-2, #circle-2, #line-2,
#triangle-3, #circle-3, #line-3
	transition: opacity 0.7s cubic-bezier(.1, .82, .165, 1) 0s
.theme-clear,
.theme-blue
	#triangle-1, #circle-1, #line-1
		opacity: 1
		// z-index: 1
		transition: opacity 0.7s cubic-bezier(.1, .82, .165, 1) 0s
	#triangle-2, #circle-2, #line-2,
	#triangle-3, #circle-3, #line-3
		opacity: 0
		// z-index: 0
		transition: opacity 0.7s cubic-bezier(.1, .82, .165, 1) 0s

.theme-purple
	#triangle-2, #circle-2, #line-2
		opacity: 1
		// z-index: 1
		transition: opacity 0.7s cubic-bezier(.1, .82, .165, 1) 0s
	#triangle-1, #circle-1, #line-1,
	#triangle-3, #circle-3, #line-3
		opacity: 0
		// z-index: 0
		transition: opacity 0.7s cubic-bezier(.1, .82, .165, 1) 0s

.theme-green
	#triangle-3, #circle-3, #line-3
		opacity: 1
		// z-index: 1
		transition: opacity 0.7s cubic-bezier(.1, .82, .165, 1) 0s
	#triangle-1, #circle-1, #line-1,
	#triangle-2, #circle-2, #line-2
		opacity: 0
		// z-index: 0
		transition: opacity 0.7s cubic-bezier(.1, .82, .165, 1) 0s


#circle
	transform: translate(-50%, 0%)
	padding: 10px
	transform-origin: 50% 50%
	z-index: 3

#line
	top: -10px
	bottom: -10px
	width: auto
	transform-origin: 50% 50%

#line2
	opacity: 0

#triangle
	bottom: -30px
	left: -34px
	transform-origin: 50% 50%
	z-index: 3

@keyframes fadeIn
	0%
		opacity: 0
	100%
		opacity: 1
@keyframes rollUp
	0%
		transform: translateY(0)
	100%
		transform: translateY(-98.5%)

@keyframes rollDown
	0%
		transform: translateY(-98.5%)
	100%
		transform: translateY(0%)