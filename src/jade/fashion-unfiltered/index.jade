        style.
            figure img { border: 1px solid #f0f0f0 }
        .owl-slider
            - for (var i=1; i<29; i++)
                figure
                    img(src='../img/fu/FashionUnfiltered_MediaKit.#{i}.jpg' alt='FashionUnfiltered_MediaKit')
       
      .wrapper
        ul.single-pagination
          li.prev
            a(href='../../free-association/').rolling-gradient
              img(src='../../svg/FA-logo.svg' alt='prev')
              span Previous Project
          li.backtoworks
            a(href='../') All Projects
          li.next
            a(href='../esquire/')
              img(src='../img/projects/esquire-small.jpg', alt='next')
              span Next Project

