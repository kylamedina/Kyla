.wolf-item-inner,
.wolf-item-inner .img-hover
	width 100%
	height 100% !important
	min-height px(250)
	display block

.browser-shadow.browser-chrome
	padding-top px(30)
	border-top 1px solid #fafafa
	&:after
		top 0

.browser-chrome
	height 100%
	width 100%
	&:after
		content ''
		display block
		height px(30)
		position absolute
		top px(-30)
		left 0
		right 0
		width 100%
		z-index 999
		background white url('../img/dots.png') no-repeat
		background-position px(10) 50%
		background-size auto px(6)
	&.is-large
		&:after
			background-size auto px(9)
			top px(-40)
			height px(40)

.waypoint-parent
	position relative
	.waypoint-child
		position absolute
		left 50%
		top 0
		width 38%
		&.is-fixed
			position fixed
			top px(60)
		&.is-bottom
			top auto
			bottom 0
		
