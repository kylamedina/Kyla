        .wolf-item.wfull
          .wolf-item-inner
            .wolf-media.portfolio-media
              img.has-animation(src='../img/nyfw/heed_02_large.jpg' alt='NYFW App')
      .wrapper
        ul.single-pagination
          li.prev
            a(href='../../akc/')
              img(src='../../img/projects/akc-small.png', alt='prev')
              span Previous Projects
          li.backtoworks
            a(href='../') All Projects
          li.next
            a(href='../cognizant/design/')
              img(src='../img/projects/cognizant2-small.jpg', alt='next')
              span Next Project