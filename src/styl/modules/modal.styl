.modal
	+below(1024px)
		display none
		
+above(1025px)		
	.modal
		background-color rgba(#0D0D0D,1)
		width 500px
		text-align right
		
		// @extends $absolute-cover
		top 0
		bottom 0
		right 0
		position fixed
		height 100vh
		// opacity 0
		transform translateX(500px)
		// pointer-events none
		transition transform 0.5s $ease-out-quart
		+below(1024px)
			display none
		.multiply
			// opacity 0
			z-index 2
			@extends $absolute-cover
		.video-cover
			@extends $absolute-cover
			z-index 1

	#page-content
		position relative
		left 0
		transition all 0.6s $ease-out-quart
	.main-footer
		transition all 0.6s $ease-out-quart
	.modal-is-active
		#header:after
			transform translateX(-500px)
			transition top 0.3s ease, transform 0.6s $ease-out-quart
		.main-footer
			transform translateX(-200px)
			transition all 0.6s $ease-out-quad
		#page-content
			left -200px !important
			transition all 0.6s $ease-out-quad
		header.hero-invisible #menu .open-nav .hamburger:before, 
		header.hero-invisible #menu .open-nav .hamburger:after,
		header #menu .open-nav .hamburger:before, 
		header #menu .open-nav .hamburger:after
			background-color #ffffff !important
			transition all 0s linear
		.modal
			z-index 999
			opacity 1
			transform translateX(0)
			pointer-events auto
			transition transform 0.6s $ease-out-quart


	.modal-menu
		align(vertical)
		z-index 99
		right 40px
		padding-top 60px
		list-style none
		h4, h5, h6
			// text-transform none
			letter-spacing 2px
			font-family Mediumfont
			line-height 1.4
		a
			color #D0D0D0
			display inline-block
			position relative
			transition all 0.6s $ease-out-quad !important
			&:after
				content ''
				display inline-block
				height 100%
				width 1px
				background-color primary
				position absolute
				right -20px
				opacity 0
			&:hover 
				color primary
				transform translateX(-15px)
				transition all 0.3s $ease-out-quad !important
				&:after
					opacity 1
					transform translateX(-6px)
					transition all 0.3s $ease-out-quad !important
