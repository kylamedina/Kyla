.wolf-item-inner,
.wolf-item-inner .img-hover
	width 100%
	height 100% !important
	min-height px(250)
	display block

li.browser-chrome
	padding px(20)
	&:after
		left px(20)
		right px(20)
		top 0
		background-size auto px(6)
	.browser-shadow
		// padding-top px(0)
		border-top 1px solid #fafafa
		&:after
			top 0

.browser-chrome
	height 100%
	width 100%
	position relative
	&:after
		content ''
		display block
		height px(30)
		position absolute
		top px(-30)
		left 0
		right 0
		// width 100%
		z-index 99
		background #fdfdfd url('../svg/dots.svg') no-repeat
		background-position px(10) 50%
		background-size auto px(8)
		border-top-left-radius px(5)
		border-top-right-radius px(5)
	&.is-large
		&:after
			background-size auto px(9)
			top px(-40)
			height px(40)

.waypoint-parent
	position relative
	.waypoint-child
		position absolute
		left 50%
		top 0
		width 38%
		&.is-fixed
			position fixed
			top px(60)
		&.is-bottom
			top auto
			bottom 0
		
.hero--artnet
	.hero-overlay
		background-color rgba(#000,0.4)
	.parallax-image
		background-position: 0% 0% !important
		
