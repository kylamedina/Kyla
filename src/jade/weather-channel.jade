    .wrapper
      ul.single-pagination
        li.prev
          a(href='akc.html')
            img(src='img/projects/akc.jpg', alt='prev')
            span Previous Project
        li.backtoworks
          a(href='index.html') Back To Works
        li.next
          a(href='cognizant.html')
            img(src='img/projects/cognizant.jpg', alt='next')
            span Next Project



