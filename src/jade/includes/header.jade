header#header
  .header-inner.clearfix
    if headerLight
      #logo.left-float.show-light-logo
        include logo.jade
      #menu.right-float.clearfix.menu-light
        include nav.jade
    else
      #logo.left-float
        include logo.jade
      #menu.right-float.clearfix
        include nav.jade
    #header-filter
      .filter-inner.align-center
        a.close-filter(href='') Close
        h5.title-filter
          strong Filter
        ul#portfolio-filter.filter.wolf-filter.clearfix(data-related-grid='portfolio-grid')
          li
            a.active(href='#', data-filter-value='*') All
          li
            a(data-filter-value='.design', href='#', title='Design') Design
          li
            a(data-filter-value='.frontend', href='#', title='Interaction') Interaction
          li
            a(data-filter-value='.photo', href='#', title='Photography') Photography