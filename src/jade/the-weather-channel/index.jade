      .hero-overlay.is-darker
      .page-title
        h5.alttitle Prototyping
        h1 The Weather Channel
      //- a#scroll-down(href='#') Scroll Down

    section#page-body
      .wrapper.xtra-wide
        ul.gallery.gallery-col1
          li.has-animation(style='background:url(../img/twc/rain.gif) repeat-x; background-size: auto 100%; background-position: 50% 50%;background-position:fixed;')
            img(data-aload='../img/twc/twc_01-medium.png', srcset="../img/twc/twc_01-small.png 640w, ../img/twc/twc_01-medium.png 1480w, ../img/twc/twc_01-large.png 2224w" alt='Weather Channel App Screens')
        
      //- .wrapper-medium
      //-   .wolf-grid.clearfix(data-mouseparallax='true' style='margin-bottom:0;')
      //-     .wolf-item.wfull
