.modal
	background-color rgba(#000,0.85)
	text-align right
	color white
	@extends $absolute-cover
	height 100vh
	
body
	height 100vh
.modal-menu
	align(vertical)
	z-index 999999
	right 40px
	padding-top 60px
	list-style none
	h4, h5, h6
		// text-transform none
		letter-spacing 2px
		font-family Mediumfont
		line-height 1.4
	a
		color white
		display inline-block
		position relative
		transition all 0.6s $ease-out-quad !important
		&:after
			content ''
			display inline-block
			height 100%
			width 1px
			background-color white
			position absolute
			right -20px
			opacity 0
		&:hover 
			color white
			transform translateX(-15px)
			transition all 0.3s $ease-out-quad !important
			&:after
				opacity 1
				transform translateX(-6px)
				transition all 0.3s $ease-out-quad !important
