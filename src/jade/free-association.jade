	script
		:coffee-script
			head.ready ->
				$shape = $('.svg-shape')
				$circle = $('#circle')
				$triangle = $('#triangle')
				$line = $('#line')
				$bg_s1 = $('#linearGradient-bg1 .stop-1')
				$bg_s2 = $('#linearGradient-bg1 .stop-2')
				lineHeight = ($('.hero-big').width()*2)

				resizeTimer = undefined

				findLineHeight = ->
					lineHeight = ($('.hero-big').width()*2)
					$('#line, #line2')
						.attr('height', lineHeight + 'px')
						.attr('viewbox','0 0 7 ' + lineHeight)
						.find('rect')
						.attr('height',lineHeight)

				bgColorGradient = (color1,color2) ->
					$bg_s1.attr('stop-color', color1)
					$bg_s2.attr('stop-color', color2)

				theme1 = () ->
					shapeStyles = ''
					n = $(window).width()/2
					m = $(window).width()/3

					shapeStyles = '#circle {
							left:' + n + 'px;
							top: 173px;
							-webkit-transform: rotate(0deg);
							transform: rotate(0deg);
						}
						#line {
						left:' + m + 'px;
						-webkit-transform: rotate(35deg);
						transform: rotate(35deg);
						}
						#triangle {
						left: -34px;
						bottom: -30px;
						-webkit-transform: rotate(-35deg);
						transform: rotate(-35deg);
						}'
					$('#animations-styles').text('').text(shapeStyles)
					bgColorGradient('#409CF9','#37F6E1')
					$('.hero-big').removeClass('theme-green theme-purple').addClass('theme-blue')
				theme2 = () ->
					shapeStyles = ''
					n = -$circle.height()*2
					m = $(window).width()/1.8
					if $(window).width() > 1600
						m = $(window).width()/1.6
					o = $(window).width()-$triangle.width()

					shapeStyles = '#circle {
							left:' + n + 'px;
							top: 152px;
							-webkit-transform: rotate(-10deg);
							transform: rotate(-10deg);
						}
						#line {
							left:' + m + 'px;
							top: -50px;
							-webkit-transform: rotate(-35deg);
							transform: rotate(-35deg);
						}
						#triangle {
							left:' + o + 'px;
							bottom: -10px;
							-webkit-transform: rotate(50deg);
							transform: rotate(50deg);
						}'
					$('#animations-styles').text('').text(shapeStyles)
					bgColorGradient('#BC68FF','#4B88FA')
					$('.hero-big').removeClass('theme-blue theme-green').addClass('theme-purple')

				theme3 = () ->
					shapeStyles = ''
					n = -$(window).width()/2
					m = $('.hero-big').height()/2
					o = $(window).width()
					p = $('.hero-big').height()/5
					if $(window).height() > 800
						p = $('.hero-big').height()/3
					
					shapeStyles = '#circle {
						left:' + n + 'px;
						top:' + m + 'px;
						-webkit-transform: rotate(240deg);
						transform: rotate(240deg);
						}
						#line {
						left:' + o + 'px;
						top: -20px;
						-webkit-transform: rotate(35deg);
						transform: rotate(35deg);
						}
						#triangle {
							left: -124px;
							bottom: '+ p + 'px;
							-webkit-transform: rotate(43deg);
							transform: rotate(43deg);
						}'
					$('#animations-styles').text('').text(shapeStyles)
					bgColorGradient('#00F0C7','#ADFFA5')
					$('.hero-big').removeClass('theme-blue theme-purple').addClass('theme-green')

				logoPosition = () ->
					shapeStyles = ''
					# $line.clone().attr('id', 'line2').appendTo('header.header')
					ww = $(window).width()
					ww2 = $(window).width()/2
					wh = $('.hero-big').height() 
					wh2 = $('.hero-big').height()/2
					tw = $triangle.width()
					th = $triangle.height()
					cw = $circle.height()*1.23
					circleHorizontalCenter = ww2 - (cw/2)
					circleVerticalCenter = wh2 - (cw/2)
					triangleHorizontalCenter = ww2 - (tw/2)
					triangleVerticalCenter = wh2 - (360/2)
					lineTop1 = wh2-85
					lineTop2 = wh2+20
					lineLeft1 = ww2*3 - 85
					lineLeft2 = ww2 + 150

					shapeStyles = '#circle {
							width:' + cw + 'px;
							height:' + cw + 'px;
							left:' + circleHorizontalCenter + 'px;
							top:' + circleVerticalCenter + 'px;
							transform-origin: 50% 50%;
							-webkit-transform: rotate(0deg);
							transform: rotate(0deg);
						}
						#line {
							top:' + lineTop1 + 'px;
							left: ' + lineLeft1 + 'px;
							height: ' + ww + 'px;
							transform-origin: 0% 0%;
							-webkit-transform: rotate(90deg);
							transform: rotate(90deg);
						}
						#line2 {
							top:' + lineTop2 + 'px;
							left: ' + lineLeft2 + 'px;
							height: ' + ww + 'px;
							transform-origin: 0% 0%;
							-webkit-transform: rotate(90deg);
							transform: rotate(90deg);
						}
						#triangle {
							left:' + triangleHorizontalCenter + 'px;
							bottom:' + triangleVerticalCenter + 'px;
							-webkit-transform: rotate(0deg);
							transform: rotate(0deg);
						}'
					$('#animations-styles').text('').text(shapeStyles)
					$('.svg-shape').css('opacity','1')


				showLogo = () ->
					$('.page-title').on 'mouseover', ->
						if !head.touch
							clearInterval(window.themeInteraval)
							logoPosition()
							# $('.page-title').css 'opacity', '0'
							$('#line2').css 'opacity', '1'
							$('#line').attr('width','7').find('rect').attr('width','7')
							$('#line2').attr('width','4').find('rect').attr('width','4')
							$('#circle').find('g').attr('stroke-width','4')
							$('#triangle').find('g g').attr('stroke-width','4')
							$('.svg-shape').css('opacity','0.6')
					$('.page-title').on 'mouseout', ->
						if !head.touch
							# $('.page-title').css 'opacity', '1'
							$('.svg-shape').not('#line2').css('opacity','1')
							$('#line2').css 'opacity', '0'
							$('#line, #line2').attr('width','3').find('rect').attr('width','3')
							$('#circle').find('g').attr('stroke-width','3')
							$('#triangle').find('g g').attr('stroke-width','3')
							$('.svg-shape').css('opacity','1')
							switchHeader()
							window.themeInteraval

				$(window).on 'resize', (e) ->
					clearTimeout resizeTimer
					resizeTimer = setTimeout((->
						lineHeight = ($('.hero-big').width()*2)
						findLineHeight()
						return
					), 250)
					return

				$(document).on 'ready', (event) ->
					console.log $circle.height()
					lineHeight = ($('.hero-big').width()*2)

					$('.svg-shape').not('#line2').css('opacity','1')
					findLineHeight()
					theme1()
					showLogo()
					window.i = 0
					window.themeInteraval = setInterval (->
						switch window.i
							when 0 then theme1() 
							when 1 then theme2() 
							when 2 then theme3() 
								
						window.i++
						if window.i > 2
							window.i = 0
						), 6000